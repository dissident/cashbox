.row
  .col-sm-6
    = simple_form_for(@bank_account) do |f|
      = f.error_notification

      .form-inputs
        = f.input :name, autofocus: true
        = f.input :description
        = f.input :invoice_details
        - unless f.object.persisted?
          = f.input :residue, input_html: { class: 'amount' }
        = f.input :currency, collection: Currency.ordered, include_blank: false

      .form-actions
        - if @ajax
          = f.button :submit, class: 'btn-primary', remote: true
        - else
          = f.button :submit, class: 'btn-primary'
