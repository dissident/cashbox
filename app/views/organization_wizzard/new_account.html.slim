.page-header
  h2 New organization bank account

.row.previous_buttons
  .col-sm-6
    p
      ' Bank account will be created by default (with default currency)
      br
      br
      = button_to 'Create default Bank account', default_account_organization_path(@organization.id), class: 'btn btn-primary', method: :get
  .col-sm-6
    p
      ' But you can create it manually
      br
      br
      = button_to 'Create manually', new_bank_account_path, class: 'btn btn-primary', remote: true, method: :get

.row
  .col-sm-12.new_account_form

.row.hidden.next_step_wrapper
  .col-sm-12
    .alert.alert-success
      ' Bank account was created successfully!
  .col-sm-3.offset-sm-1
      = button_to 'Create another', new_bank_account_path, class: 'btn btn-primary new_account', remote: true, method: :get
  .col-sm-8
      = link_to 'Next step', new_category_organization_path(@organization), class: 'btn btn-success'

= content_for :sidebar
  = render 'home/settings'
