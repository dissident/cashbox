.page-header
  .pull-right
    = link_to 'New Invitation', new_invitation_path, class: 'btn btn-success'
  h1 Listing invitations


- if @invitations.present?
  table.table.table-stripped.table-hover
    thead
      tr
        th Inviter
        th Invited
        th With role
        th Accepted
        th Date
        th
    tbody
      - @invitations.each do |invitation|
        tr
          td.word-break = User.find(invitation.invited_by_id).full_name
          td.word-break = invitation.email
          td = invitation.role.capitalize
          td = invitation.accepted? ? 'Yes' : 'No'
          td = I18n.l invitation.created_at
          td.text-right
            .btn-group
              = link_to 'Resend', resend_invitation_path(token: invitation.token),
                class: 'btn btn-primary'
              = link_to 'Destroy', invitation_path(invitation),
                method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
- else
  .alert.alert-warning No invitations

= content_for :sidebar
  = render 'home/settings'
