$('#modal_title').html("<i class='glyphicon glyphicon-pencil'></i> Edit Transaction");

<% if @transaction.category.type == 'Income' %>
  $('#income').html("<%= j render('transactions/form', type: nil, transaction: @transaction) %>");
  $('li.expense').removeClass('active').hide();
  $('.tab-pane#expense').removeClass('active');
  $('li.income').addClass('active').show();
  $('.tab-pane#income').addClass('active');
<% else %>
  $('#expense').html("<%= j render('transactions/form', type: nil, transaction: @transaction) %>");
  $('li.income').removeClass('active').hide();
  $('.tab-pane#income').removeClass('active');
  $('li.expense').addClass('active').show();
  $('.tab-pane#expense').addClass('active');
<% end %>
$('li.transfer').removeClass('active').hide();
$('.tab-pane#transfer').removeClass('active');

$('#transaction_modal').modal('show');
addTransactionFormMasks();
