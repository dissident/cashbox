$('#modal_title').html("<i class='glyphicon glyphicon-plus'></i> Add New Transaction");
$('#income').html("<%= j render('transactions/form', type: 'Income', transaction: @transaction) %>");
$('#expense').html("<%= j render('transactions/form', type: 'Expense', transaction: @transaction) %>");
$('#transfer').html("<%= j render('transactions/transfer_form', transfer: @transfer) %>");

$('li.income').addClass('active').show();
