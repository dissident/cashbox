header
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        = link_to 'CashBox', root_path, class: 'navbar-brand' unless signed_in?
        ul.nav.navbar-nav.navbar-left
          = render 'shared/layout/switch_organization'

      - if current_organization
        p#current_organization.navbar-text= link_to current_organization.name, organization_path(current_organization)

      ul.nav.navbar-nav.navbar-right
        - if signed_in?
          li= link_to 'Profile', edit_user_registration_path
          li= link_to 'Sign out', destroy_user_session_path, method: :delete
