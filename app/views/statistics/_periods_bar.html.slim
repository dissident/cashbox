.row
  .col-md-12
    .panel.with-nav-tabs
      .panel-heading
        ul.nav.nav-tabs
          li.active
            a data-toggle="tab" href="#current-month"  Current month
          li
            a data-toggle="tab" href="#previous-month"  Previous month
          li
            a data-toggle="tab" href="#current-quarter"  Current quarter
          li
            a data-toggle="tab" href="#this-year"  This year
          li
            a data-toggle="tab" href="#all-time"  All time
      .panel-body
        .tab-content
          #current-month.tab-pane.fade.in.active
            = render 'pie_charts', period: 'current-month'
          #previous-month.tab-pane.fade
            = render 'pie_charts', period: 'previous-month'
          #current-quarter.tab-pane.fade
            = render 'pie_charts', period: 'current-quarter'
          #this-year.tab-pane.fade
            = render 'pie_charts', period: 'this-year'
          #all-time.tab-pane.fade
            = render 'pie_charts', period: 'all-time'
